{{#each ideas}}
  <div class="card mb-2">
    <div class="card-header">
      <h4>{{title}}</h4>
    </div>
    <div class="d-flex flex-row align-items-center my-3">
      <div class="card-body">
        <p class="mb-0">{{details}}</p>
      </div>
      <div class="card-body d-flex justify-content-end">
        <a class="btn btn-dark m-2" href="/ideas/edit/{{id}}"><i class="fa fa-edit"></i></a>
        <form action="/ideas/{{id}}?_method=DELETE" method="post">
          <input type="hidden" name="_method" value="DELETE">
          <button class="btn btn-danger m-2" type="submit"><i class="fa fa-trash"></i></button>
        </form>
      </div>
    </div>
  </div>
{{else}}
  <div class="container card card-body">
    <p class="lead mx-auto">No video ideas yet. <a href="/ideas/add">Add some!</a></p>
  </div>
{{/each}}
