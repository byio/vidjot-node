{{#each ideas}}
  <div class="card">
    <div class="card-header">
      <h4>{{title}}</h4>
    </div>
    <div class="d-flex flex-row align-items-end my-3">
      <div class="card-body">
        <p class="mb-0">{{details}}</p>
      </div>
      <div class="card-body d-flex justify-content-end">
        <a class="mr-2" href="/ideas/edit/{{id}}"><i class="fa fa-edit"></i></a>
        <a class="ml-2" href="#"><i class="fa fa-trash"></i></a>
      </div>
    </div>
  </div>
{{else}}
  <div class="container card card-body">
    <p class="lead mx-auto">No video ideas yet. <a href="/ideas/add">Add some!</a></p>
  </div>
{{/each}}
